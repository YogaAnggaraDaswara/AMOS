	            android:padding="0.5dp">
	
	            <TextView
	                android:id="@+id/val_vhc_lbl_lokasi1"
	                style="@style/label_1"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.35"
