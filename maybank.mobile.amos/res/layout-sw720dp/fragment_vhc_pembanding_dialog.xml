	            <com.mobile.framework.widget.ExSpinner
	                android:id="@+id/val_vhc_spn_penawaran"
	                style="@style/spinner_3"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.6"
	                android:prompt="@string/LAND_SHAPE" />
	
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:background="@color/color_followup"
	            android:layout_margin="0.7dp"
	            android:padding="0.5dp">
	
	            <TextView
	                android:id="@+id/val_vhc_lbl_harga_penawaran"
	                android:layout_width="0dp"
	                android:layout_weight="0.35"
	                 android:layout_height="70dp"
	                style="@style/label_1"
	                android:text="@string/PEMHARGA" />
	
	            <TextView
	                android:layout_width="0dp"
	                android:layout_weight="0.05"
	                android:layout_height="wrap_content"
	                android:gravity="center_horizontal"
	                android:text=":"
	                android:textColor="@android:color/black" />
	
	            <EditText
	                android:id="@+id/val_vhc_txt_harga_penawaran"
	                style="@style/edittext_2"
	                android:layout_width="0dp"
	                android:layout_weight="0.6"
	                android:layout_height="wrap_content"
	                android:imeOptions="actionDone"
	                android:inputType="number"
	                android:maxLength="20" />
	
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:background="@color/color_followup"
