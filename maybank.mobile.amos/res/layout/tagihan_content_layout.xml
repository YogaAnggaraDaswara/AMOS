<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@color/color_white">

    <ScrollView
        android:id="@+id/tabungan_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tabungan_lbl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_tagihan_title_content"
                style="@style/label_header" />

            <TableLayout
                android:id="@+id/tagihan_tableLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:background="@color/color_button_navi"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtPageno"
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btn_first"
                    android:layout_marginTop="2dp"
                    style="@style/button_text"
                    android:background="@drawable/button_first"
                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:enabled="true"
                    android:layout_margin="2dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_prev"
                    android:layout_marginTop="2dp"
                    style="@style/button_text"
                    android:background="@drawable/button_prev"
                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:enabled="true"
                    android:layout_margin="2dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_marginTop="2dp"
                    style="@style/button_text"
                    android:background="@drawable/button_next"
                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:enabled="true"
                    android:layout_margin="2dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_last"
                    android:layout_marginTop="2dp"
                    style="@style/button_text"
                    android:background="@drawable/button_last"
                    android:layout_gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:enabled="true"
                    android:layout_margin="2dp"
                    android:visibility="visible" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>