<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@color/color_white">

    <ScrollView
        android:id="@+id/tabungan_dlg_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="20dp">


        <LinearLayout
            android:id="@+id/contentlayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp">

                <TextView
                    android:id="@+id/tabungan_view_lbl_norekening"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_no" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/tabungan_view_linearlayout_rekening"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/tabungan_view_txt_rekening_value"
                        style="@style/edittext_2"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:visibility="visible"
                        android:enabled="false" />

                    <ImageView
                        android:id="@+id/tabungan_view_img_searchrekening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/button_find" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp">

                <TextView
                    android:id="@+id/tabungan_view_lbl_namadebitur"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_namadebitur" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tabungan_view_txt_alamat_value"
                    style="@style/edittext_2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="80dp"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:visibility="visible"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp">

                <TextView
                    android:id="@+id/tabungan_view_lbl_alamat"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_alamat" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tabungan_view_txt_namadebitur_value"
                    style="@style/edittext_2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:visibility="visible"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp">

                <TextView
                    android:id="@+id/tabungan_view_lbl_jenistabungan"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_jenistabungan" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tabungan_view_txt_jenistabungan_value"
                    style="@style/edittext_2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:visibility="visible"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp">

                <TextView
                    android:id="@+id/tabungan_view_lbl_nomortabungan"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_nomortabungan" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tabungan_view_txt_nomortabungan_value"
                    style="@style/edittext_2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:visibility="visible"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp">

                <TextView
                    android:id="@+id/tabungan_view_lbl_namapenabung"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_namapenabung" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tabungan_view_txt_namapenabung_value"
                    style="@style/edittext_2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:visibility="visible"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp">

                <TextView
                    android:id="@+id/tabungan_view_lbl_handphone"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_handphone" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tabungan_view_txt_handphone_value"
                    style="@style/edittext_2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp">

                <TextView
                    android:id="@+id/tabungan_view_lbl_setoran"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_setoran" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tabungan_view_txt_setoran_value"
                    style="@style/edittext_2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:visibility="visible"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_bacground2"
                android:layout_margin="0.01dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tabungan_view_lbl_pin"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="wrap_content"
                    style="@style/label_1"
                    android:text="@string/form_rekening_pin" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/tabungan_view_txt_pin_value"
                    style="@style/edittext_2"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:visibility="visible"
                    android:enabled="false" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/tabungan_dlg_content_container"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/tabungan_view_btn_close"
            android:layout_marginTop="2dp"
            android:text="@string/form_action_tutup"
            style="@style/button_text"
            android:background="@color/color_black"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true" />

        <Button
            android:id="@+id/tabungan_view_btn_requestpin"
            android:layout_marginTop="2dp"
            android:text="@string/form_action_requestpin"
            style="@style/button_text"
            android:background="@color/color_green_dark"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true" />

        <Button
            android:id="@+id/tabungan_view_btn_sendtransaction"
            android:layout_marginTop="2dp"
            android:text="@string/form_action_sendtransaction"
            style="@style/button_text"
            android:background="@color/color_blue_dark"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true" />


    </LinearLayout>

</RelativeLayout>