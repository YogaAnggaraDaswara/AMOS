	                android:layout_height="wrap_content"
	                style="@style/label_1"
	                android:text="@string/PEMKONDISI" />
	
	            <TextView
	                android:layout_width="0dp"
	                android:layout_weight="0.05"
	                android:layout_height="wrap_content"
	                android:gravity="center_horizontal"
