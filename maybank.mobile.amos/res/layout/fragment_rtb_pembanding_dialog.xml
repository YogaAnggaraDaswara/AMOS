	            android:padding="0.5dp">
	
	            <TextView
	                android:id="@+id/val_rtb_lbl_no_telp"
	                android:layout_width="0dp"
	                android:layout_weight="0.35"
	                android:layout_height="wrap_content"
	                style="@style/label_1"
	                android:text="@string/PEMTELP" />
	
	            <TextView
	                android:layout_width="0dp"
	                android:layout_weight="0.05"
	                android:layout_height="wrap_content"
