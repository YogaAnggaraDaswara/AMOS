	                android:layout_weight="0.05"
	                android:layout_height="wrap_content"
	                android:gravity="center_horizontal"
	                android:text=":"
	                android:textColor="@android:color/black" />
				<EditText
	                android:id="@+id/val_rtb_txt_nara_sumber"
	                style="@style/edittext_2"
