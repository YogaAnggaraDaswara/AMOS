<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="negative_button_text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="negative_button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/negative_button</item>
        <item name="android:background">@drawable/negative_button</item>
        <item name="android:textAppearance">@style/negative_button_text_appearance</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="negative_button2" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/negative_button</item>
        <item name="android:background">@drawable/negative_button</item>
        <item name="android:textAppearance">@style/negative_button_text_appearance</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
