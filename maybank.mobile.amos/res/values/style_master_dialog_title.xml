<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="master_content_title_text_appearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="master_content_title" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/img_dialog_title_bg_pitch</item>
        <item name="android:textAppearance">@style/master_content_title_text_appearance</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">-1dp</item>
        <item name="android:layout_marginTop">-3dp</item>

    </style>
</resources>